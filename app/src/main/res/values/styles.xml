<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/roboto_light</item>

    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>



    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TitleStyle">
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:textSize">@dimen/title_size</item>
    </style>

    <style name="NormalTextStyle">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:foregroundGravity">center_horizontal</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/colorBackgrounds</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="labelStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:textColor">#E4E4E4</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="EditStyle" parent="labelStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">#FFFFFF</item>
        <item name="android:ems">10</item>
        <item name="android:inputType">textPersonName</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:textColorHint">@color/colorAccent</item>
        <item name="android:textSize">18sp</item>
   </style>

    <style name="shoelist_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textColor">@color/colorBackgrounds</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="LargeTestStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:foregroundGravity">center_horizontal</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/colorBackgrounds</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="LoginLabelStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textColorHint">#A1A1A1</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:background">@drawable/rounded_corners_button</item>
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorSecondary</item>
        <item name="android:textSize">@dimen/button_text_size</item>
    </style>

    <style name="ScrollViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginBottom">32dp</item>
        <item name="android:background">@drawable/rounded_corners_background</item>
    </style>

    <style name="MidTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/Margin_medium</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/NormalText_large</item>
    </style>

</resources>
